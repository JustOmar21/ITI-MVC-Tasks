@model Car
@{
    ViewData["Title"] = "Update";
    var car = ViewBag.Car as Car;
}

@using (Html.BeginForm("Update", "Car", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ID)
    <div class="mb-3">
        @Html.LabelFor(model => model.ID, new { @class = "form-label" })
        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Manfacture, new { @class = "form-label" })
        @Html.EditorFor(model => model.Manfacture, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Model, new { @class = "form-label" })
        @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Color, new { @class = "form-label" })
        @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Update Car</button>
    @Html.Raw(CreateBack())
}



@functions {
    string CreateBack()
    {
        return "<a href='/Car/Index' class='btn btn-secondary'>Cancel</a>";
    }

}
